<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/dosis</item>
        <item name="android:textSize">@dimen/entrance_tab_texts</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/entrance_tab_texts</item>
    </style>

    <style name="SignInputTextLayouts" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorYellow</item>
        <item name="hintTextColor">@color/colorOrange</item>
    </style>

    <style name="SignSubtext" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/dosis</item>
        <item name="android:textSize">@dimen/sign_card_subtext_size</item>
    </style>
</resources>
